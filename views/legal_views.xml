<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Legal Case List View -->
    <record id="view_legal_case_list" model="ir.ui.view">
        <field name="name">legal.case.list</field>
        <field name="model">legal.case</field>
        <field name="arch" type="xml">
            <list string="Legal Cases">
                <field name="name"/>
                <field name="client_id"/>
                <field name="responsible_lawyer_id"/>
                <field name="case_type"/>
                <field name="stage"/>
                <field name="open_date"/>
            </list>
        </field>
    </record>

    <!-- Legal Case Form View -->
    <record id="view_legal_case_form" model="ir.ui.view">
        <field name="name">legal.case.form</field>
        <field name="model">legal.case</field>
        <field name="arch" type="xml">
            <form string="Legal Case">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="client_id"/>
                            <field name="responsible_lawyer_id"/>
                            <field name="case_type"/>
                            <field name="stage"/>
                        </group>
                        <group>
                            <field name="open_date"/>
                            <field name="close_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <field name="hearing_ids">
                        <list string="Hearings">
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="status"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Legal Hearing List View -->
    <record id="view_legal_hearing_list" model="ir.ui.view">
        <field name="name">legal.hearing.list</field>
        <field name="model">legal.hearing</field>
        <field name="arch" type="xml">
            <list string="Hearings">
                <field name="name"/>
                <field name="case_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Legal Hearing Form View -->
    <record id="view_legal_hearing_form" model="ir.ui.view">
        <field name="name">legal.hearing.form</field>
        <field name="model">legal.hearing</field>
        <field name="arch" type="xml">
            <form string="Legal Hearing">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="case_id"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_legal_case" model="ir.actions.act_window">
        <field name="name">Legal Cases</field>
        <field name="res_model">legal.case</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_legal_hearing" model="ir.actions.act_window">
        <field name="name">Legal Hearings</field>
        <field name="res_model">legal.hearing</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>         
